  </div>
  <div class="row">
    <div class="col-xs-12 col-md-3">
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-3">
      <%= f.label :phone_number %><br>
      <%= f.text_field :phone_number %>
    </div>
  </div>
  <div class="field">
    <%= f.hidden_field :company_id %>
  </div>
  <br>
  <div class="row">
    <div class="col-xs-12 col-md-3">
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
  </div>
<% end %>
